<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvCategoryItemAdmin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/menuh"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/lightWhite"
            />

        <TextView
            android:id="@+id/tvNameCategoryAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imvCategoryItemAdmin"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bungee_regular"
            />

        <TextView
            android:id="@+id/tvDescriptionCategoryAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imvCategoryItemAdmin"
            android:layout_below="@+id/tvNameCategoryAdmin"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/antic_regular"
            />

        <LinearLayout
            android:layout_below="@+id/tvDescriptionCategoryAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditCategoryAdmin"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDeleteCategoryAdmin"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>